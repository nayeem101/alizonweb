<!-- navbar -->
<section id="navbar">
  <!-- navbar -->
  <nav class="navbar navbar-expand-lg bg-light az-shadow fixed-top">
    <div class="container justify-content-between p-0">
      <a class="az-nav-icon az-nav-menu" title="Menu">
        <i class="fa fa-bars"></i>
      </a>
      <a class="navbar-brand az-brand" href="/">
        <img src="/images/logo.png" class="az-navbar-logo" alt="Alizon" />
      </a>

      <div class="az-nav-content">
        <form class="az-nav-search-form">
          <input
            class="form-control mr-sm-2 az-input-search"
            type="search"
            placeholder="Search for ..."
            aria-label="Search"
          />
          <button class="btn az-btn-outline-red my-2 my-sm-0" type="submit">
            <i class="fa fa-search"></i>
          </button>
        </form>
        <ul class="navbar-nav">
          <li class="nav-item az-nav-search-li">
            <a class="nav-link az-nav-icon az-nav-search" title="search">
              <i class="fa fa-search"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link az-nav-icon az-cart" title="Cart">
              <i class="fa fa-shopping-cart"></i>
              <span class="az-cart-items">0</span>
            </a>
          </li>
          <li class="nav-item">
            <a
              class="nav-link az-nav-icon az-nav-user"
              title="<%= typeof user !== 'undefined' ? user.fullName : 'Login'%>"
            >
              <i class="fa fa-user-circle"></i>
            </a>
          </li>
        </ul>
      </div>

      <!-- mobile nav search form -->
      <div class="az-nav-mobile-search">
        <span class="az-icon-back"><i class="fa fa-arrow-left"></i></span>
        <form class="az-nav-mobile-form">
          <input
            class="form-control"
            type="search"
            placeholder="Search for ..."
            aria-label="Search"
          />
          <button class="btn az-btn-primary" type="submit">
            <i class="fa fa-search"></i>
          </button>
        </form>
      </div>
    </div>
  </nav>
  <!-- mobile nav -->
  <div class="az-nav-container">
    <div class="az-nav-mobile px-3">
      <div class="az-nav-user-container">
        <div class="az-nav-mobile-top">
          <img class="img-fluid" src="/images/logo.png" alt="Alizon" />
          <span class="az-nav-icon az-nav-close" title="close">
            <i class="fa fa-close"></i>
          </span>
        </div>
        <div class="az-nav-user-info d-none">
          <span class="az-nav-user-icon"><i class="fa fa-user"></i></span>
          <h5>Username</h5>
        </div>
        <div class="az-nav-user-sign">
          <button class="btn az-btn-primary az-login-btn az-shadow">
            Log in <i class="fa fa-sign-in"></i>
          </button>
          <button class="btn az-btn-outline-red az-login-btn az-shadow">
            Register <i class="fa fa-user-plus"></i>
          </button>
        </div>
      </div>
      <ul class="nav px-0">
        <li class="nav-item">
          <a class="az-nav-link" href="/">
            <span class="fa fa-home mr-1"></span>Home
          </a>
        </li>
        <li class="nav-item">
          <a class="az-nav-link" href="/shipments">
            <span class="fa fa-ship mr-1"></span>Ship for me
          </a>
        </li>
        <li class="nav-item">
          <a class="az-nav-link" href="/source-product">
            <span class="fa fa-shopping-basket mr-1"></span>Source for me</a
          >
        </li>
        <li class="nav-item">
          <a class="az-nav-link" href="/buy-and-ship"
            ><span class="fa fa-briefcase mr-1"></span>Buy & Ship for me</a
          >
        </li>
        <li class="nav-item">
          <a class="az-nav-link" href="/cost-calculator">
            <span class="fa fa-calculator mr-1"></span>Cost Calculator
          </a>
        </li>
        <li class="nav-item">
          <a
            href="https://www.messenger.com/t/Aliz0nbd"
            target="_blank"
            class="az-nav-link"
          >
            <img src="/icons/messenger.svg" alt="messenger" width="18px" />
            Messenger
          </a>
        </li>
        <li class="nav-item">
          <a
            href="https://wa.me/+8801968011689"
            target="_blank"
            class="az-nav-link"
          >
            <i class="fa fa-whatsapp"></i> Whatsapp
          </a>
        </li>
      </ul>
    </div>
  </div>
  <!-- cart -->
  <div class="az-cart-container">
    <div class="az-cart-card">
      <div class="az-cart-top">
        <span class="az-cart-close-icon">
          <i class="fa fa-close"></i>
        </span>
        <p>My Cart</p>
      </div>
      <div class="az-cart-body">
        <div class="az-cart-product"></div>
        <button class="btn az-btn-outline-red az-cart-clearALl">
          Clear All
        </button>
        <div class="az-cart-empty">
          <span class="az-cart-icon">
            <i class="fa fa-shopping-cart"></i>
          </span>
          <p>Your cart is empty</p>
        </div>
        <div class="az-cart-bottom hide">
          <span class="az-hr-2"></span>
          <h5 id="az-prod-price-total">Total: <span>2036</span></h5>
          <a href="/order" class="btn az-btn-primary"
            >Proceed to Pay <i class="fa fa-long-arrow-right"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
  <!-- user login -->
  <div class="az-user-container">
    <div class="az-user-card az-shadow">
      <% if (typeof user !== 'undefined' && user !== '') { %>
      <div class="az-user-card-top px-2">
        <h5><%= user.fullName %></h5>
      </div>
      <div class="px-2 py-2">
        <div class="list-group">
          <a
            class="list-group-item list-group-item-action"
            href="/user/profile/<%= user.id %>"
          >
            <i class="fa fa-user"></i> My Profile
          </a>
          <a
            class="list-group-item list-group-item-action"
            href="/user/orders/<%= user.id %>"
          >
            <i class="fa fa-list-alt"></i> My Orders
          </a>
          <a
            class="list-group-item list-group-item-action"
            href="/user/shipments/<%= user.id %>"
          >
            <i class="fa fa-ship"></i> My Shipments
          </a>
          <a
            class="list-group-item list-group-item-action"
            href="/user/source-products/<%= user.id %>"
          >
            <i class="fa fa-list"></i> My Source Products
          </a>
          <a
            class="list-group-item list-group-item-action"
            href="/user/buy-and-ship/<%= user.id %>"
          >
            <i class="fa fa-list"></i> My Buy & Ship
          </a>
          <a
            class="list-group-item list-group-item-action"
            href="/user/wishlist/<%= user.id %>"
          >
            <i class="fa fa-star"></i> My Wishlist
          </a>
          <div class="dropdown-divider"></div>

          <form class="mx-auto" action="/user/logout" method="POST">
            <button class="btn btn-secondary" type="submit">
              <i class="fa fa-sign-out"></i>Logout
            </button>
          </form>
        </div>
      </div>
      <% } else {%>
      <div class="az-user-card-top">
        <h5>Login</h5>
      </div>
      <div class="az-user-form">
        <form action="/user/login" method="POST">
          <div class="form-group">
            <label for="email">Email Address</label>
            <input
              type="email"
              class="form-control"
              name="email"
              id="email"
              placeholder="abc123@xyz.com"
              required
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              class="form-control"
              name="password"
              id="password"
              required
            />
          </div>
          <button class="btn az-btn-primary w-100" type="submit">Login</button>
        </form>
      </div>

      <div class="az-user-card-bottom">
        <p>Don't have an account?</p>
        <a class="az-signup-link" href="/user/register">Sign Up</a>
        <a class="az-forget-link" href="/user/forgot-password"
          >Forgot Password?</a
        >
      </div>
      <% } %>
    </div>
  </div>
</section>
