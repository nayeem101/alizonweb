<!-- header -->
<%- include('../layout/header',{title,route:'buyandship'}) -%>
<!-- navbar -->
<%- include('../partials/navbar') -%>
<!-- nav bottom -->
<%- include('../partials/navbottom') -%>

<!-- main content -->
<main class="az-mt">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-3 p-0 d-none d-md-block">
        <%- include('../partials/user-sidebar',{route:'buyandship',user}) -%>
      </div>
      <div class="col-md-9 p-0">
        <div class="mt-3 px-3" style="min-height: 450px">
          <h5 class="az-section-title">My Product Sourcing</h5>

          <div class="accordion mb-3" id="accordion">
            <% for( let i = 0; i < data.length; i++ ) { %>
            <div class="card">
              <div class="card-header" id="heading<%= i %>">
                <button
                  class="btn btn-inline-block w-100 text-left"
                  data-toggle="collapse"
                  data-target="#collapse<%= i %>"
                  aria-expanded="true"
                  aria-controls="collapse<%= i %>"
                >
                  <h5 class="d-inline-block">
                    Order ID:
                    <span class="text-primary"><%= data[i].id %></span>
                  </h5>
                  <h5 class="d-inline-block">
                    Order Date:
                    <span class="text-primary"
                      ><%= data[i].created_At.toLocaleString() %>
                    </span>
                    <i class="fa fa-chevron-down"></i>
                  </h5>
                </button>
              </div>

              <div
                id="collapse<%= i %>"
                class="collapse <%= i===0?'show':'' %>"
                aria-labelledby="heading<%= i %>"
                data-parent="#accordion"
              >
                <div class="card-body">
                  <p>
                    Product Link:
                    <a
                      href="<%= data[i].prod_link %>"
                      class="text-info"
                      target="_blank"
                      ><%= data[i].prod_link %></a
                    >
                  </p>
                  <p>
                    Description:<span class="text-info font-weight-bold">
                      <%= data[i].prod_desc %>
                    </span>
                  </p>
                  <p>
                    Quantity:<span class="text-info font-weight-bold">
                      <%= data[i].prod_quantity %>
                    </span>
                  </p>
                  <% if (data[i].reply.status) { %>
                  <p>
                    Price:<span class="text-info font-weight-bold">
                      <%= data[i].reply.price %>$
                    </span>
                  </p>
                  <p>
                    MOQ:<span class="text-info font-weight-bold">
                      <%= data[i].reply.moq %>
                    </span>
                  </p>
                  <p>
                    Product Weight:<span class="text-info font-weight-bold">
                      <%= data[i].reply.weight %>
                    </span>
                  </p>
                  <p>
                    Shipping Cost:<span class="text-info font-weight-bold">
                      <%= data[i].reply.charge %>à§³
                    </span>
                  </p>
                  <a href="/order/<%= data[i].id %>" class="btn az-btn-primary"
                    >Order Now</a
                  >
                  <% }else{ %>
                  <p class="text-secondary font-weight-bold">No reply yet!</p>
                  <% } %>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </div>
        <!-- footer -->
        <%- include('../partials/footer') -%>
      </div>
    </div>
  </div>
</main>

<!-- footer -->
<%- include('../layout/footer',{route:'buyandship'}) -%>
