<!-- header -->
<%- include('../layout/header',{route:'buyandship'}) %>
<!-- navbar -->
<%- include('../partials/navbar') %>
<!-- nav bottom -->
<%- include('../partials/navbottom') -%>
<!-- main content -->
<main class="az-mt">
  <div class="container py-3 px-4">
    <h4 class="az-section-title">Want a product?</h4>
    <span class="az-hr"></span>
    <h4 class="az-section-subtitle">We can buy and ship your products.</h4>

    <div class="az-source-form az-shadow">
      <%- include('../partials/message') -%>
      <form action="/buy-and-ship" method="POST">
        <div class="form-group">
          <label for="az-buy-prod">Product Link<span>*</span></label>
          <input
            type="text"
            class="form-control"
            id="az-buy-prod"
            name="prod_link"
            value="<%= typeof prod_link !== 'undefined' ? prod_link : ''%>"
            placeholder="enter product name"
            required
          />
        </div>
        <div class="form-group">
          <label for="az-buy-prod-q">Product Quantity<span>*</span></label>
          <input
            type="number"
            min="1"
            max="100"
            class="form-control"
            id="az-buy-prod-q"
            name="prod_quantity"
            value="<%= typeof prod_quantity !== 'undefined' ? prod_quantity : ''%>"
            placeholder="enter product quantity"
            required
          />
        </div>
        <div class="form-group">
          <label for="az-buy-prod-desc">Description<span>*</span></label>
          <textarea
            class="form-control"
            id="az-buy-prod-desc"
            name="prod_desc"
            value="<%= typeof prod_desc !== 'undefined' ? prod_desc : ''%>"
            placeholder="ex: Color, Size, Variant etc"
            required
            rows="3"
          ></textarea>
        </div>
        <div class="btn-wrapper mx-auto text-center">
          <button class="btn az-btn-primary w-75" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</main>
<br />
<!-- footer -->
<%- include('../partials/footer') -%>
<!-- footer -->
<%- include('../layout/footer',{route:'buyandship'}) %>
