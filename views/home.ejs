<!-- products on sale slider -->
<section id="sale-slider">
  <div class="container">
    <h3 class="az-section-title">Top Products</h3>
    <span class="az-hr"></span>
    <h5 class="az-section-subtitle">These are the top products on sale</h5>
    <div class="az-sale-container">
      <div class="az-sale-slider">
        <% for( let j=0; j <topProducts.length; j++ ) { %>
        <div class="az-sale-product">
          <span class="az-sale2"
          ><%= (100 - Math.floor((topProducts[j].salePrice.max / topProducts[j].originalPrice.max)*100))  %>%</span>
          <img
            class="img-fluid"
            style="width:180px"
            src="<%= topProducts[j].images[1] %>"
            alt="sale product"
            loading="lazy"
          />
          <div class="az-sale-product-info">
            <a class="az-sale-link" href="/products/<%= topProducts[j].productId %>"
              ><%= topProducts[j].title.substring(0,18) %></a>
            <p class="az-sale-price">$<%= topProducts[j].salePrice.max %> <span class="text-muted"
              ><%= topProducts[j].originalPrice.max %></span></p>
          </div>
        </div>
        <% } %>
      </div>
      <button type="button" class="slick-arrow az-slick-prev">
        <i class="fa fa-chevron-left"></i>
      </button>
      <button type="button" class="slick-arrow az-slick-next">
        <i class="fa fa-chevron-right"></i>
      </button>
    </div>
  </div>
</section>

